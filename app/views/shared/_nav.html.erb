<div>
  <div class="navbar fixed-top navbar-expand-sm navbar-light navbar-garden">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag("logo.jpg") %>
    <% end %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <div class="nav-item dropdown">
            <%= cl_image_tag current_user.photo.key, height: 40, width: 40, crop: :fill, class: "avatar", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false  %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "My profile", user_path(current_user), class: "dropdown-item" %>
              <%#= link_to "My messages", user_path(current_user), class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </div>
        <% else %>
          <li class="nav-item active nav-link">
            <%= link_to "Sign up", new_user_registration_path %>
          </li>
          <li class="nav-item nav-link">
            <%= link_to "Log in", new_user_session_path %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
