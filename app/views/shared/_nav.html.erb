<div>
  <div class="navbar fixed-top navbar-expand-sm navbar-light navbar-garden">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag("logo.jpg") %>
    <% end %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <!-- dropdown on avatar..but not pretty -->
          <div class="btn-group">
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
            <%= cl_image_tag current_user.photo.key, height: 40, width: 40, crop: :fill, class: "avatar" %>
            </a>
            <ul class="dropdown-menu" style="margin-left:-20px;">
            <!-- dropdown menu links -->
              <li class="nav-item active nav-link"><%= link_to "Add Garden", new_garden_path %></li>
              <li class="nav-item active nav-link"><%= link_to "My Bookings", bookings_path %></li>
              <li class="nav-item active nav-link"><%= link_to "My Gardens", profile_gardens_path %></li>
              <li class="nav-item active nav-link"><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
            </ul>
          </div>

        <% else %>
          <li class="nav-item active nav-link">
            <%= link_to "Sign up", new_user_registration_path %>
          </li>
          <li class="nav-item nav-link">
            <%= link_to "Log in", new_user_session_path %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
