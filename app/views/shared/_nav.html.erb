<div>
  <div class="navbar navbar-expand-sm navbar-light navbar-garden">

    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag("logo.jpeg") %>

    <% end %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item active nav-link">
            <%= link_to "#" do %>
              <%= current_user.first_name %> <!-- make user profile page, add user_name and user_photo - avatar -->
            <% end %>
          </li>
          <li class="nav-item active nav-link">
            <%= link_to "Add garden", new_garden_path %> <!-- on profile page -->
          </li>
          <li class="nav-item active nav-link">
            <%= link_to "Sign out", destroy_user_session_path, method: :delete %> <!-- dropdown on avatar -->
          </li>
        <% else %>
          <li class="nav-item active nav-link">
            <%= link_to "Sign up", new_user_registration_path %>
          </li>
          <li class="nav-item nav-link">
            <%= link_to "Log in", new_user_session_path %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
