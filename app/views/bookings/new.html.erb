<div class="container" style="padding: 80px 0;">
  <div class="row justify-content-center">
    <div class="col-md-6" style="padding-top: 32px;">
      <h4 style="margin-bottom: 32px"><%= @garden.title %></h4> <!-- change this => datepicker -->
      <%= cl_image_tag @garden.photos.first.key, height: 300, width: 500, crop: :fill %>
    </div>
    <div class="col-md-6" style="padding-top: 32px;">
      <h4 style="margin-bottom: 32px">Book this garden</h4>
      <%= simple_form_for [@garden, @booking] do |f| %>
        <%= f.input :start_date, start_year: Date.tomorrow.year %>
        <%= f.input :end_date, start_year: Date.tomorrow.year %>
        <%= f.submit %>
      <% end %>
      <br>
      <br>
      <%= link_to "All Gardens", gardens_path, class: "btn btn-outline-success" %>
    </div>
  </div>
</div>
