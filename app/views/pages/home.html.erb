  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1516253593875-bd7ba052fbc5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80)";>
    <div class="container-banner text-center">
      <h1>Rent a <strong> garden </strong> in <strong> Berlin </strong> without the hassle </strong>!</h1>
      <h2>You do not need to go far to find your perfect garden!</h2>
      <%= link_to "Book now", gardens_path, class: "btn btn-flat" %>
    </div>
  </div>

  <div class='row justify-content-around card-container'>
    <% @gardens.each do |garden| %>
      <div class="card-trip">
        <%= cl_image_tag garden.photos.first.key, height: 200, width: 200, crop: :fill %>
        <div class="card-trip-infos">
          <div>
            <h2><%= link_to garden.title, garden_path(garden) %></h2>
            <%= garden.avg_rating %>
            <p>Short description here!</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


