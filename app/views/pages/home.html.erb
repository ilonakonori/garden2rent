<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner banner">
      <div class="carousel-caption d-none d-md-block text-center">
        <h1>Rent a garden in Berlin without the hassle!</h1>
        <h2 style="margin-bottom: 2rem;">You do not need to go far to find your perfect garden!</h2>
        <%= link_to "Browse", gardens_path(@gardens), class: "button-text button", style: "margin: 40px;" %>
      </div>
    <div class="carousel-item active ">
      <%= image_tag "first_slide.png", alt: "First Slide", class: "d-block w-100" %> 
    </div>
    <div class="carousel-item">
      <%= image_tag "second_slide.png", alt: "Second Slide", class: "d-block w-100" %>     
    </div>
    <div class="carousel-item">
      <%= image_tag "third_slide.png", alt: "Third Slide", class: "d-block w-100" %>     
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div style="padding-bottom: 0;">
  <div class='row justify-content-xl-center card-container'>
    <% @gardens.each do |garden| %>
    <div style="margin: 24px; border-radius: 8px; width: 410px; height: 360px;">
        <div class="card-trip" style="width: 410px; height: 380px">
          <%= link_to garden_path(garden) do %>
            <%= cl_image_tag garden.photos.first.key, height: 230, width: 410, crop: :fill %>
          <% end %>
          <div class="card-trip-infos">
            <div style="margin: 4px;">
              <h2><%= link_to garden.title, garden_path(garden) %></h2>
              <p class="card-text"><%= garden.avg_rating %> (<%= pluralize garden.reviews.size, "review" %>)</p>
              <br>
              <p>Price: â‚¬<%= garden.price %> / day</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

