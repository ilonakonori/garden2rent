<%= simple_form_for(garden) do |f| %>
  <%= f.input :title %>
  <%= f.input :location %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <% if garden.persisted? %>
    <%= f.submit value="Edit", class: "btn btn-outline-success" %>
  <% else %>
    <%= f.submit value="Add", class: "btn btn-outline-primary" %>
  <% end %>
<% end %>
